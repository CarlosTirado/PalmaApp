@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h3>@ViewData["Title"]</h3>
<p class="font-small mt-16 mb-12">Utiliza tus credenciales para acceder al sistema.</p>
<form id="account" method="post">
    <div class="input-field">
        <i class="material-icons--outline suffix">account_circle</i>
        <input type="text" asp-for="Input.Email">
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email" class="hint-error"></span>
    </div>

    <div class="input-field">
        <i class="material-icons--outline suffix">vpn_key</i>
        <input asp-for="Input.Password">
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password" class="hint-error"></span>
    </div>

    <div class="form-group">
        <div class="checkbox">
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                ¿Mantener la Sesión Iniciada?
                @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
            </label>
        </div>
    </div>

    <p class="font-small text-right"><a id="forgot-password" asp-page="./ForgotPassword">Olvide mi contraseña</a></p>
    <button type="submit" class="btn btn-block red text-white mt-12">Ingresar</button>
    <p class="font-small mt-8">¿No tengo una cuenta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">registrate aquí</a></p>
</form>
<div asp-validation-summary="All" class="text-danger"></div>

