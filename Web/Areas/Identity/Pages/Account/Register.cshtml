@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro de Usuario";
}

<h3>@ViewData["Title"]</h3>
<p class="font-small mt-16 mb-12">Diligencia el siguiente formulario para crear un usuario.</p>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="input-field">
        <i class="material-icons--outline suffix">account_circle</i>
        <input type="text" asp-for="Input.Email">
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email" class="hint-error"></span>
    </div>

    <div class="input-field">
        <i class="material-icons--outline suffix">vpn_key</i>
        <input asp-for="Input.Password">
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password" class="hint-error"></span>
    </div>

    <div class="input-field">
        <i class="material-icons--outline suffix">vpn_key</i>
        <input asp-for="Input.ConfirmPassword">
        <label asp-for="Input.ConfirmPassword"></label>
        <span asp-validation-for="Input.ConfirmPassword" class="hint-error"></span>
    </div>

    <button type="submit" class="btn btn-block red text-white mt-12">Registrar</button>
    <p class="font-small mt-8">¿Ya tengo cuenta? <a asp-page="./Login">ingresa por aquí</a></p>
</form>
<div asp-validation-summary="All" class="text-danger"></div>

